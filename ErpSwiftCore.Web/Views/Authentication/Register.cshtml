@using ErpSwiftCore.Web.Models.AuthenticationSystemManagmentModels.Authentication
@model RegisterRequestDto
@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "إنشاء حساب";
}
<div class="container">
    <section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">
                    <!-- Logo -->
                    <div class="d-flex justify-content-center py-4">
                        <a asp-controller="Home" asp-action="Index" class="logo d-flex align-items-center w-auto">
                            <img src="~/img/logo.png" alt="Logo" />
                            <span class="d-none d-lg-block">تطبيق ERP</span>
                        </a>
                    </div>
                    <!-- Card -->
                    <div class="card mb-3 w-100">
                        <div class="card-body">
                            <div class="pt-4 pb-2 text-center">
                                <h5 class="card-title pb-0 fs-4">إنشاء حساب جديد</h5>
                                <p class="small">أدخل بياناتك الشخصية لإنشاء حساب</p>
                            </div>

                            <form asp-action="Register"
                                  method="post"
                                  enctype="multipart/form-data"
                                  class="row g-3 needs-validation"
                                  novalidate>
                                @Html.AntiForgeryToken()

                                <div class="col-12">
                                    <label asp-for="Name" class="form-label">الاسم الكامل</label>
                                    <input asp-for="Name"
                                           type="text"
                                           class="form-control"
                                           placeholder="الاسم الكامل"
                                           required />
                                    <div class="invalid-feedback" asp-validation-for="Name"></div>
                                </div>

                                <div class="col-12">
                                    <label asp-for="Email" class="form-label">البريد الإلكتروني</label>
                                    <input asp-for="Email"
                                           type="email"
                                           class="form-control"
                                           placeholder="البريد الإلكتروني"
                                           required />
                                    <div class="invalid-feedback" asp-validation-for="Email"></div>
                                </div>

                                <div class="col-12">
                                    <label asp-for="UserName" class="form-label">اسم المستخدم</label>
                                    <div class="input-group has-validation">
                                        <span class="input-group-text" id="inputGroupPrepend">&#64;</span>
                                        <input asp-for="UserName"
                                               type="text"
                                               class="form-control"
                                               placeholder="اسم المستخدم"
                                               aria-describedby="inputGroupPrepend"
                                               required />
                                    </div>
                                    <div class="invalid-feedback" asp-validation-for="UserName"></div>
                                </div>

                                <div class="col-12">
                                    <label asp-for="Password" class="form-label">كلمة المرور</label>
                                    <input asp-for="Password"
                                           type="password"
                                           class="form-control"
                                           placeholder="كلمة المرور"
                                           required />
                                    <div class="invalid-feedback" asp-validation-for="Password"></div>
                                </div>

                                <div class="col-12">
                                    <label asp-for="PhoneNumber" class="form-label">رقم الهاتف (اختياري)</label>
                                    <input asp-for="PhoneNumber"
                                           type="tel"
                                           class="form-control"
                                           placeholder="رقم الهاتف" />
                                    <div class="invalid-feedback" asp-validation-for="PhoneNumber"></div>
                                </div>

                                <div class="col-12">
                                    <label asp-for="Address" class="form-label">العنوان (اختياري)</label>
                                    <input asp-for="Address"
                                           type="text"
                                           class="form-control"
                                           placeholder="العنوان" />
                                    <div class="invalid-feedback" asp-validation-for="Address"></div>
                                </div>

                                <div class="col-12">
                                    <label asp-for="ProfilePictureUrl" class="form-label">رابط صورة الملف الشخصي (اختياري)</label>
                                    <input asp-for="ProfilePictureUrl"
                                           type="url"
                                           class="form-control"
                                           placeholder="https://..." />
                                    <div class="invalid-feedback" asp-validation-for="ProfilePictureUrl"></div>
                                </div>

                              


                                <div class="col-12">
                                    <button type="submit" class="btn btn-success w-100">إنشاء الحساب</button>
                                </div>

                                <div class="col-12 text-center">
                                    <p class="small mb-0">
                                        لديك حساب بالفعل؟
                                        <a asp-action="Login">تسجيل الدخول</a>
                                    </p>
                                </div>
                            </form>

                        </div>
                    </div>

                  

                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
