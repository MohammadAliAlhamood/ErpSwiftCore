@using ErpSwiftCore.Web.Models.FinancialSystemManagmentModels.AccountModels
@model AccountDto

@{
    Layout = "_Layout";
    ViewData["Title"] = "Account Details";
}

<section class="section">
    <div class="row">
        <div class="col-lg-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@Model.Name</h5>
                    <h6 class="card-subtitle mb-2 text-muted">@Model.AccountNumber</h6>
                </div>
            </div>
        </div>
        <div class="col-lg-8">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title mb-4 text-primary">تفاصيل الحساب</h5>
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Transaction Type</dt>
                        <dd class="col-sm-8">@Model.TransactionType</dd>
                        <dt class="col-sm-4">Account Type</dt>
                        <dd class="col-sm-8">@Model.AccountType</dd>
                        <dt class="col-sm-4">Currency</dt>
                        <dd class="col-sm-8">@Model.Currency?.CurrencyName</dd>
                        <dt class="col-sm-4">Active</dt>
                        <dd class="col-sm-8">
                            @if (Model.IsActive)
                            {
                                <span class="text-success">Yes</span>
                                ;
                            }
                            else
                            {

                                <span class="text-danger">No</span>
                                ;
                            }
                        </dd>
                        <dt class="col-sm-4">Created At</dt>
                        <dd class="col-sm-8">@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")</dd>
                        <dt class="col-sm-4">Created By</dt>
                        <dd class="col-sm-8">@Model.CreatedBy</dd>
                        <dt class="col-sm-4">Updated At</dt>
                        <dd class="col-sm-8">
                            @(Model.UpdatedAt.HasValue
                                                        ? Model.UpdatedAt.Value.ToString("yyyy-MM-dd HH:mm")
                                                        : "<span class=\"text-muted\">—</span>")
                        </dd>
                        <dt class="col-sm-4">Updated By</dt>
                        <dd class="col-sm-8">
                            @(Model.UpdatedBy.HasValue
                                                        ? Model.UpdatedBy.Value.ToString()
                                                        : "<span class=\"text-muted\">—</span>")
                        </dd>
                    </dl>
                </div>
                <div class="card-footer text-end">
                    <a asp-action="Index" class="btn btn-outline-secondary me-2">
                        <i class="bi bi-arrow-left"></i> رجوع
                    </a>
                    <a asp-action="Upsert" asp-route-id="@Model.ID" class="btn btn-warning">
                        <i class="bi bi-pencil-square"></i> تعديل
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
