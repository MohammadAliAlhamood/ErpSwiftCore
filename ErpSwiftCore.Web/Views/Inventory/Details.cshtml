@using ErpSwiftCore.Web.Models.InventorySystemManagmentModels.InventoryModels
@model InventoryDto

@{
    Layout = "_Layout";
    ViewData["Title"] = "Inventory Details";
}

<section class="section">
    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title">@ViewData["Title"]</h5>
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3">Product</dt>
                <dd class="col-sm-9">@Model.Product.Name</dd>

                <dt class="col-sm-3">Warehouse</dt>
                <dd class="col-sm-9">@Model.Warehouse.Name</dd>

                <dt class="col-sm-3">On Hand</dt>
                <dd class="col-sm-9">@Model.QuantityOnHand</dd>

                <dt class="col-sm-3">Reserved</dt>
                <dd class="col-sm-9">@Model.QuantityReserved</dd>
            </dl>
        </div>
        <div class="card-footer text-end">
            <a asp-action="Index" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Back</a>
        </div>
    </div>
</section>
