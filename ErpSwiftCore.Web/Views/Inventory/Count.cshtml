@using ErpSwiftCore.Web.Models.InventorySystemManagmentModels.InventoryModels
@model InventoryCountDto

@{
    Layout = "_Layout";
    ViewData["Title"] = "Total Inventory Count";
}

<section class="section">
    <div class="card w-25 mx-auto text-center">
        <div class="card-body">
            <h1 class="display-4">@Model.TotalInventories</h1>
            <p class="text-muted">@ViewData["Title"]</p>
        </div>
        <div class="card-footer text-end">
            <a asp-action="Index" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Back</a>
        </div>
    </div>
</section>
