@using ErpSwiftCore.Web.Models.InventorySystemManagmentModels.InventoryModels
@model IEnumerable<InventoryDto>

@{
    Layout = "_Layout";
    ViewData["Title"] = "Below Reorder Level";
}

<section class="section">
    <div class="card">
        <div class="card-body mb-3">
            <h5 class="card-title">@ViewData["Title"]</h5>
        </div>
        <div class="card-body p-0">
            <table class="table datatable align-middle mb-0">
                <thead class="table-light text-center">
                    <tr><th>Product</th><th>Warehouse</th><th>On Hand</th><th>Reserved</th></tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr><td colspan="4" class="text-center text-muted">None.</td></tr>
                    }
                    else
                    {
                        foreach (var i in Model)
                        {
                            <tr>
                                <td>@i.Product.Name</td>
                                <td>@i.Warehouse.Name</td>
                                <td class="text-end">@i.QuantityOnHand</td>
                                <td class="text-end">@i.QuantityReserved</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
        <div class="card-footer text-end">
            <a asp-action="Index" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Back</a>
        </div>
    </div>
</section>

@section Scripts {
    <script>new simpleDatatables.DataTable('.datatable');</script>
}
