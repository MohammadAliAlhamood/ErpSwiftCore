@using ErpSwiftCore.Web.Models.InventorySystemManagmentModels.InventoryModels
@using ErpSwiftCore.Web.Models.InventorySystemManagmentModels.InventoryPolicyModels
@model InventoryWithPolicyDto

@{
    Layout = "_Layout";
    ViewData["Title"] = "Inventory with Policy";
}

<section class="section">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@ViewData["Title"]</h5>
            <p class="mb-4">
                Product: <strong>@Model.Product.Name</strong> |
                Warehouse: <strong>@Model.Warehouse.Name</strong>
            </p>
            <dl class="row">
                <dt class="col-sm-3">Policy Type</dt>
                <dd class="col-sm-9">@Model.Policy.PolicyType</dd>

                <dt class="col-sm-3">Reorder Level</dt>
                <dd class="col-sm-9">@Model.Policy.ReorderLevel</dd>

                <dt class="col-sm-3">Max Stock Level</dt>
                <dd class="col-sm-9">@Model.Policy.MaxStockLevel</dd>

                <dt class="col-sm-3">Auto Reorder</dt>
                <dd class="col-sm-9">
                    @if (Model.Policy.AutoReorderEnabled)
                    {
                        <i class="bi bi-check-circle-fill text-success"></i>
                    }
                    else
                    {
                        <i class="bi bi-x-circle-fill text-danger"></i>
                    }
                </dd>
            </dl>
        </div>
        <div class="card-footer text-end">
            <a asp-action="Details" asp-route-id="@Model.ID" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back
            </a>
        </div>
    </div>
</section>
