@using ErpSwiftCore.Web.Models.InventorySystemManagmentModels.InventoryTransactionModels
@model IEnumerable<InventoryTransactionDto>

@{
    Layout = "_Layout";
    ViewData["Title"] = "Inventory Transactions";

    // Extract inventory ID directly from the first transaction (if any)
    var invId = Model.Any()
        ? Model.First().InventoryID
        : Guid.Empty;
}

<section class="section">
    <div class="card">
        <div class="card-body mb-3">
            <h5 class="card-title">@ViewData["Title"]</h5>
        </div>
        <div class="card-body p-0">
            <table class="table datatable align-middle mb-0">
                <thead class="table-light text-center">
                    <tr>
                        <th>Date</th>
                        <th>Type</th>
                        <th>Quantity</th>
                        <th>Running Balance</th>
                        <th>Reference #</th>
                        <th>Notes</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted">No transactions.</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var t in Model)
                        {
                            <tr>
                                <td>@t.TransactionDate.ToString("yyyy-MM-dd")</td>
                                <td>@t.TransactionType</td>
                                <td class="text-end">@t.Quantity</td>
                                <td class="text-end">@t.RunningBalance</td>
                                <td>@(string.IsNullOrWhiteSpace(t.ReferenceNumber) ? "—" : t.ReferenceNumber)</td>
                                <td>@(string.IsNullOrWhiteSpace(t.Notes) ? "—" : t.Notes)</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
        <div class="card-footer text-end">
            <a asp-action="Details" asp-route-id="@invId" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back
            </a>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            new simpleDatatables.DataTable('.datatable');
        });
    </script>
}
