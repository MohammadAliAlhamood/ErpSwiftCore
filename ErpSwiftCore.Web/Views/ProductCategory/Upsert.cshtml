@using ErpSwiftCore.Web.ViewModels
@model ProductCategoryViewModel

@{
    Layout = "_Layout";
    bool isEdit = Model.ProductCategory.ID != Guid.Empty;
    ViewData["Title"] = isEdit ? "Edit Category" : "Create New Category";
}

<section class="section">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@ViewData["Title"]</h5>

            <form asp-action="Upsert" method="post" class="needs-validation" novalidate>
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="ProductCategory.ID" />

                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" asp-for="ProductCategory.Name">Name</label>
                    <div class="col-sm-10">
                        <div class="form-floating">
                            <input asp-for="ProductCategory.Name" class="form-control" placeholder="Category Name" />
                            <label asp-for="ProductCategory.Name">Name</label>
                        </div>
                        <span asp-validation-for="ProductCategory.Name" class="text-danger small"></span>
                    </div>
                </div>

                <div class="row mb-5">
                    <label class="col-sm-2 col-form-label" asp-for="ProductCategory.ParentCategoryId">Parent Category</label>
                    <div class="col-sm-10">
                        <div class="form-floating">
                            <select asp-for="ProductCategory.ParentCategoryId"
                                    asp-items="Model.ParentCategoryList"
                                    class="form-select">
                                <option value="">-- None --</option>
                            </select>
                            <label asp-for="ProductCategory.ParentCategoryId">Parent Category</label>
                        </div>
                        <span asp-validation-for="ProductCategory.ParentCategoryId" class="text-danger small"></span>
                    </div>
                </div>

                <div class="text-end">
                    <a asp-action="Index" class="btn btn-outline-secondary me-2">Cancel</a>
                    <button type="submit"
                            class="btn @(isEdit ? "btn-warning" : "btn-success")">
                        @(isEdit ? "Save Changes" : "Create Category")
                    </button>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            'use strict';
            var forms = document.querySelectorAll('.needs-validation');
            Array.prototype.slice.call(forms).forEach(function (form) {
                form.addEventListener('submit', function (e) {
                    if (!form.checkValidity()) {
                        e.preventDefault();
                        e.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();
    </script>
}
