@using ErpSwiftCore.Web.Models.ProductSystemManagmentModels
@model ProductCategoryDto
@{
    Layout = "_Layout";
    ViewData["Title"] = "Category Details";
}

<section class="section">
    <div class="row align-items-start">
        <div class="col-lg-4 mb-4">
            <div class="card">
                         <h5 class="card-title">@Model.Name</h5>
            </div>
        </div>
    </div>
    <div class="col-lg-8">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title mb-4 text-primary">تفاصيل الفئة</h5>
                <dl class="row mb-0">
                    <dt class="col-sm-4">الفئة الرئيسية</dt>
                    <dd class="col-sm-8">
                        @if (Model.ParentCategory != null)
                        {
                            @Model.ParentCategory.Name
                        }
                        else
                        {
                            <span class="text-muted">—</span>
                        }
                    </dd>

                    <dt class="col-sm-4">تاريخ الإنشاء</dt>
                    <dd class="col-sm-8">@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")</dd>

                    <dt class="col-sm-4">تاريخ التحديث</dt>
                    <dd class="col-sm-8">
                        @if (Model.UpdatedAt != null)
                        {
                            @Model.UpdatedAt.Value.ToString("yyyy-MM-dd HH:mm")
                        }
                        else
                        {
                            <span class="text-muted">—</span>
                        }
                    </dd>

                    <dt class="col-sm-4">أنشئ بواسطة</dt>
                    <dd class="col-sm-8">@Model.CreatedBy</dd>

                    <dt class="col-sm-4">تحديث بواسطة</dt>
                    <dd class="col-sm-8">
                        @if (!string.IsNullOrEmpty(Model.UpdatedBy.ToString()))
                        {
                            @Model.UpdatedBy
                        }
                        else
                        {
                            <span class="text-muted">—</span>
                        }
                    </dd>

                   
                </dl>
            </div>
            <div class="card-footer text-end">
                <a asp-action="Index" class="btn btn-outline-secondary me-2">
                    <i class="bi bi-arrow-left"></i> رجوع
                </a>
                <a asp-action="Upsert" asp-route-id="@Model.ID" class="btn btn-warning">
                    <i class="bi bi-pencil-square"></i> تعديل
                </a>
            </div>
        </div>
    </div>
    </div>
</section>
