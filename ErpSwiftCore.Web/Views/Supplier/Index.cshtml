@using ErpSwiftCore.Web.Models.CRMSystemManagmentModels.SupplierModels
@model IEnumerable<SupplierDto>

@{
    Layout = "_Layout";
    ViewData["Title"] = "Suppliers";
}

<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@ViewData["Title"]</h5>
                    <p class="card-text mb-4">
                        إدارة الموردين — عرض، إنشاء، تعديل، أو حذف الموردين.
                    </p>
                    <div class="mb-3 d-flex flex-wrap gap-2">
                        <a asp-action="Upsert" class="btn btn-primary">
                            <i class="bi bi-plus-lg"></i> New Supplier
                        </a>
                        <button id="btnDeleteAll" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Delete All
                        </button>
                    </div>
                    <table class="table datatable table-bordered table-hover align-middle">
                        <thead class="table-light text-center">
                            <tr>
                                <th style="width:40px;"><input type="checkbox" id="selectAll" /></th>
                                <th>Code</th>
                                <th>Name</th>
                                <th>Contact Info </th>
                                <th>Max Supply Limit</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (!Model.Any())
                            {
                                <tr>
                                    <td colspan="8" class="text-center text-muted">No suppliers to display.</td>
                                </tr>
                            }
                            else
                            {
                                foreach (var s in Model)
                                {
                                    <tr>
                                        <td class="text-center">
                                            <input type="checkbox" class="select-item" value="@s.ID" />
                                        </td>
                                        <td>@s.SupplierCode</td>
                                        <td>@($"{s.FirstName} {s.MiddleName} {s.LastName}".Replace("  ", " "))</td>
                                        <td>@s.ContactInfo.ToString()</td>
                                        <td>@(s.MaxSupplyLimit?.ToString("N2") ?? "—")</td>
                                        <td class="text-center">
                                            <div class="btn-group btn-group-sm" role="group">
                                                <a asp-action="Details" asp-route-id="@s.ID" class="btn btn-info" title="View">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a asp-action="Upsert" asp-route-id="@s.ID" class="btn btn-warning" title="Edit">
                                                    <i class="bi bi-pencil-square"></i>
                                                </a>
                                                <form asp-action="Delete" asp-route-id="@s.ID" method="post" class="d-inline delete-form">
                                                    @Html.AntiForgeryToken()
                                                    <button type="button" class="btn btn-danger btn-delete" title="Delete">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(function () {
            new simpleDatatables.DataTable('.datatable');
            $('#selectAll').change(function () {
                $('.select-item').prop('checked', this.checked);
            });
            $(document).on('click', '.btn-delete', function (e) {
                e.preventDefault();
                var form = $(this).closest('.delete-form');
                Swal.fire({
                    title: 'Delete Supplier',
                    text: 'Are you sure you want to permanently delete this supplier?',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'Yes, delete it'
                }).then(result => { if (result.isConfirmed) form.submit(); });
            });
            $('#btnDeleteAll').click(function () {
                var ids = $('.select-item:checked').map((_,el)=>el.value).get();
                if (!ids.length) { toastr.warning('لم يتم تحديد أي مورد للحذف.'); return; }
                Swal.fire({
                    title: 'Delete Selected',
                    text: 'Delete selected suppliers?',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'Yes, delete'
                }).then(res => {
                    if (res.isConfirmed) {
                        $.post('@Url.Action("DeleteRange")', {
                            __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val(),
                            ids: ids
                        }).done(()=>location.reload());
                    }
                });
            });
        });
    </script>
}
