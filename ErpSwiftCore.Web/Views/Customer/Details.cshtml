@using ErpSwiftCore.Web.Models.CRMSystemManagmentModels.CustomerModels
@model CustomerDto

@{
    Layout = "_Layout";
    ViewData["Title"] = "Customer Details";
}

<section class="section">
    <div class="row">
        <div class="col-lg-4 mb-4">
            <div class="card">
                <h5 class="card-title p-3">@Model.FirstName @Model.LastName</h5>
                <div class="card-body">
                    <p class="mb-1"><strong>Code:</strong> @Model.CustomerCode</p>
                    <p class="mb-1"><strong>Credit Limit:</strong> @(Model.CreditLimit?.ToString("N2") ?? "—")</p>
                </div>
            </div>
        </div>
        <div class="col-lg-8">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title mb-4 text-primary">تفاصيل العميل</h5>
                    <dl class="row mb-0">
                        <dt class="col-sm-4">National ID</dt>
                        <dd class="col-sm-8">@Model.NationalID</dd>

                        <dt class="col-sm-4">Date of Birth</dt>
                        <dd class="col-sm-8">@Model.DateOfBirth.ToString("yyyy-MM-dd")</dd>

                        <dt class="col-sm-4">Gender</dt>
                        <dd class="col-sm-8">@Model.Gender</dd>

                        <dt class="col-sm-4">Address</dt>
                        <dd class="col-sm-8">@Model.Address.ToString()</dd>

                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Model.ContactInfo.Email</dd>

                        <dt class="col-sm-4">Phone</dt>
                        <dd class="col-sm-8">@Model.ContactInfo.Phone</dd>

                        <dt class="col-sm-4">Mobile</dt>
                        <dd class="col-sm-8">@Model.ContactInfo.Mobile</dd>
                    </dl>
                </div>
                <div class="card-footer text-end">
                    <a asp-action="Index" class="btn btn-outline-secondary me-2">
                        <i class="bi bi-arrow-left"></i> رجوع
                    </a>
                    <a asp-action="Upsert" asp-route-id="@Model.ID" class="btn btn-warning">
                        <i class="bi bi-pencil-square"></i> تعديل
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
