@using ErpSwiftCore.Web.Models.CRMSystemManagmentModels.CustomerModels
@model IEnumerable<CustomerDto>

@{
    Layout = "_Layout";
    ViewData["Title"] = "Customers";
}

<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@ViewData["Title"]</h5>
                    <p class="card-text mb-4">
                        إدارة العملاء — عرض، إنشاء، تعديل، أو حذف العملاء.
                    </p>

                 

                    <div class="mb-3 d-flex flex-wrap gap-2">
                        <a asp-action="Upsert" class="btn btn-primary">
                            <i class="bi bi-plus-lg"></i> New Customer
                        </a>
                        <button id="btnDeleteAll" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Delete All
                        </button>
                    </div>

                    <table class="table datatable table-bordered table-hover align-middle">
                        <thead class="table-light text-center">
                            <tr>
                                <th style="width:40px;"><input type="checkbox" id="selectAll" /></th>
                                <th>Code</th>
                                <th>Name</th>
                                <th>Contact</th>
                                <th>Credit Limit</th> 
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (!Model.Any())
                            {
                                <tr>
                                    <td colspan="8" class="text-center text-muted">
                                        No customers to display.
                                    </td>
                                </tr>
                            }
                            else
                            {
                                foreach (var c in Model)
                                {
                                    <tr>
                                        <td class="text-center">
                                            <input type="checkbox" class="select-item" value="@c.ID" />
                                        </td>
                                        <td>@c.CustomerCode</td>
                                        <td>
                                            @{
                                                var fullName = $"{c.FirstName} {c.MiddleName} {c.LastName}".Replace("  ", " ").Trim();
                                            }
                                            @fullName
                                        </td>
                                        <td>@c.ContactInfo.ToString()</td>
                                        <td>@(c.CreditLimit?.ToString("N2") ?? "—")</td> 
                                        <td class="text-center">
                                            <div class="btn-group btn-group-sm" role="group">
                                                <a asp-action="Details" asp-route-id="@c.ID" class="btn btn-info" title="View">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a asp-action="Upsert" asp-route-id="@c.ID" class="btn btn-warning" title="Edit">
                                                    <i class="bi bi-pencil-square"></i>
                                                </a>
                                                <form asp-action="Delete" asp-route-id="@c.ID" method="post" class="d-inline delete-form">
                                                    @Html.AntiForgeryToken()
                                                    <button type="button" class="btn btn-danger btn-delete" title="Delete">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(function () {
            // تهيئة الجدول
            new simpleDatatables.DataTable('.datatable');

            // اختيار/إلغاء اختيار الكل
            $('#selectAll').change(function () {
                $('.select-item').prop('checked', this.checked);
            });

            // حذف سجل فردي
            $(document).on('click', '.btn-delete', function (e) {
                e.preventDefault();
                var form = $(this).closest('.delete-form');
                Swal.fire({
                    title: 'Delete Customer',
                    text: 'Are you sure you want to permanently delete this customer?',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'Yes, delete it'
                }).then(result => {
                    if (result.isConfirmed) form.submit();
                });
            });

            // حذف مجموعة
            $('#btnDeleteAll').click(function () {
                var ids = $('.select-item:checked').map((_, el) => el.value).get();
                if (!ids.length) {
                    toastr.warning('لم يتم تحديد أي عميل للحذف.');
                    return;
                }
                Swal.fire({
                    title: 'Delete Selected',
                    text: 'Delete selected customers?',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'Yes, delete'
                }).then(res => {
                    if (res.isConfirmed) {
                        $.post('@Url.Action("DeleteRange")', {
                            __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val(),
                            ids: ids
                        }).done(() => location.reload());
                    }
                });
            });
        });
    </script>
}
