@using ErpSwiftCore.Web.Models.InventorySystemManagmentModels.WarehouseModels
@model IEnumerable<WarehouseDto>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Warehouses";
}

<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@ViewData["Title"]</h5>
                    <p class="card-text mb-4">
                        إدارة المستودعات — عرض، إنشاء، تعديل، أو حذف سجلات المستودعات.
                    </p>
                    <div class="mb-3 d-flex flex-wrap gap-2">
                        <a asp-action="Upsert" class="btn btn-primary">
                            <i class="bi bi-plus-lg"></i> New Warehouse
                        </a>
                        <button id="btnDeleteAll" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Delete All
                        </button>
                    </div>
                    <table class="table datatable table-bordered table-hover align-middle">
                        <thead class="table-light text-center">
                            <tr>
                                <th style="width:40px;">
                                    <input type="checkbox" id="selectAll" />
                                </th>
                                <th>Name</th>
                                <th>Location</th>
                                <th>Branch</th>
                                <th>Storage?</th>
                                <th>Operational?</th>
                                <th>Created At</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (!Model.Any())
                            {
                                <tr>
                                    <td colspan="8" class="text-center text-muted">No warehouses to display.</td>
                                </tr>
                            }
                            else
                            {
                                foreach (var w in Model)
                                {
                            <tr>
                                <td class="text-center">
                                    <input type="checkbox" class="select-item" value="@w.ID" />
                                </td>
                                <td>@w.Name</td>
                                <td>@(string.IsNullOrEmpty(w.Location) ? "—" : w.Location)</td>
                                <td>@w.Branch.BranchName</td>
                                <td class="text-center">
                                    @Html.Raw(w.IsStorage
                                                                        ? "<i class=\"bi bi-check-circle-fill text-success\"></i>"
                                                                        : "<i class=\"bi bi-x-circle-fill text-danger\"></i>")
                                </td>
                                <td class="text-center">
                                    @Html.Raw(w.IsOperational
                                                                        ? "<i class=\"bi bi-check-circle-fill text-success\"></i>"
                                                                        : "<i class=\"bi bi-x-circle-fill text-danger\"></i>")
                                </td>



                                <td>@w.CreatedAt.ToString("yyyy-MM-dd")</td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Details" asp-route-id="@w.ID" class="btn btn-info" title="View">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Upsert" asp-route-id="@w.ID" class="btn btn-warning" title="Edit">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                        <form asp-action="Delete" asp-route-id="@w.ID" method="post" class="d-inline delete-form">
                                            @Html.AntiForgeryToken()
                                            <button type="button" class="btn btn-danger btn-delete" title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                                                        }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(document).ready(function () {
            new simpleDatatables.DataTable('.datatable');

            // Select / Deselect all
            $('#selectAll').on('change', function () {
                $('.select-item').prop('checked', this.checked);
            });

            // Single delete confirmation
            $(document).on('click', '.btn-delete', function (e) {
                e.preventDefault();
                var form = $(this).closest('.delete-form');
                Swal.fire({
                    title: 'Delete Warehouse',
                    text: 'Are you sure you want to permanently delete this warehouse?',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'Yes, delete it',
                    cancelButtonText: 'Cancel'
                }).then(result => {
                    if (result.isConfirmed) form.submit();
                });
            });

            // Bulk delete confirmation
            $('#btnDeleteAll').on('click', function () {
                var ids = $('.select-item:checked').map(function () { return this.value; }).get();
                if (!ids.length) {
                    toastr.warning('لم يتم تحديد أي مستودعات للحذف.');
                    return;
                }
                Swal.fire({
                    title: 'Delete Selected',
                    text: 'Are you sure you want to delete the selected warehouses?',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'Yes, delete',
                    cancelButtonText: 'Cancel'
                }).then(result => {
                    if (result.isConfirmed) {
                        $.post('@Url.Action("DeleteRange")', {
                            __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val(),
                            warehouseIds: ids
                        }).done(() => location.reload());
                    }
                });
            });
        });
    </script>
}
