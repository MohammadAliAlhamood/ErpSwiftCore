@using ErpSwiftCore.Web.Models.ProductSystemManagmentModels.ProductPriceModels
@model ProductPriceDto

@{
    Layout = "_Layout";
    ViewData["Title"] = "Price Details";
}

<section class="section">
    <div class="row">
        <div class="col-lg-4 mb-4">
            <div class="card p-3">
                <h5 class="card-title">@Model.Product?.Name — @Model.Price.ToString("N2") @Model.Currency?.CurrencyName</h5>
                <p class="mb-1"><strong>Type:</strong> @Model.PriceType</p>
                <p class="mb-0"><strong>Effective:</strong> @Model.EffectiveDate.ToString("yyyy-MM-dd")</p>
            </div>
        </div>
        <div class="col-lg-8">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title text-primary mb-4">تفاصيل السعر</h5>
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Product</dt>
                        <dd class="col-sm-8">@Model.Product?.Name</dd>

                        <dt class="col-sm-4">Price</dt>
                        <dd class="col-sm-8">@Model.Price.ToString("N2")</dd>

                        <dt class="col-sm-4">Currency</dt>
                        <dd class="col-sm-8">@Model.Currency?.CurrencyName</dd>

                        <dt class="col-sm-4">Type</dt>
                        <dd class="col-sm-8">@Model.PriceType</dd>

                        <dt class="col-sm-4">Effective Date</dt>
                        <dd class="col-sm-8">@Model.EffectiveDate.ToString("yyyy-MM-dd")</dd>

                        <dt class="col-sm-4">Created At</dt>
                        <dd class="col-sm-8">@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")</dd>

                        <dt class="col-sm-4">Updated At</dt>
                        <dd class="col-sm-8">
                            @if (Model.UpdatedAt.HasValue)
                            {
                                @Model.UpdatedAt.Value.ToString("yyyy-MM-dd HH:mm")
                            }
                            else
                            {
                                <span class="text-muted">—</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Created By</dt>
                        <dd class="col-sm-8">@Model.CreatedBy</dd>

                        <dt class="col-sm-4">Updated By</dt>
                        <dd class="col-sm-8">
                            @if (Model.UpdatedBy.HasValue)
                            {
                                @Model.UpdatedBy
                            }
                            else
                            {
                                <span class="text-muted">—</span>
                            }
                        </dd>
                    </dl>
                </div>
                <div class="card-footer text-end">
                    <a asp-action="IndexAll" class="btn btn-outline-secondary me-2">
                        <i class="bi bi-arrow-left"></i> Back
                    </a>
                    <a asp-action="Upsert" asp-route-id="@Model.ID" class="btn btn-warning">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
