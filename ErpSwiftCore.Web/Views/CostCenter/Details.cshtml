@using ErpSwiftCore.Web.Models.FinancialSystemManagmentModels.CostCenterModels
@model CostCenterDto

@{
    Layout = "_Layout";
    ViewData["Title"] = "Cost Center Details";
}

<section class="section">
    <div class="row align-items-start">
        <div class="col-lg-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@Model.CenterName</h5>
                    <h6 class="card-subtitle mb-2 text-muted">@Model.Code</h6>
                </div>
            </div>
        </div>
        <div class="col-lg-8">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title mb-4 text-primary">تفاصيل مركز التكلفة</h5>
                    <dl class="row mb-0">
                      
                        <dt class="col-sm-4">Description</dt>
                        <dd class="col-sm-8">
                            @(Model.Description ?? "<span class=\"text-muted\">—</span>")
                        </dd>
                        <dt class="col-sm-4">Created At</dt>
                        <dd class="col-sm-8">@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")</dd>
                        <dt class="col-sm-4">Created By</dt>
                        <dd class="col-sm-8">@Model.CreatedBy</dd>
                        <dt class="col-sm-4">Updated At</dt>
                        <dd class="col-sm-8">
                            @(Model.UpdatedAt.HasValue
                                                        ? Model.UpdatedAt.Value.ToString("yyyy-MM-dd HH:mm")
                                                        : "<span class=\"text-muted\">—</span>")
                        </dd>
                        <dt class="col-sm-4">Updated By</dt>
                        <dd class="col-sm-8">
                            @(Model.UpdatedBy.HasValue
                                                        ? Model.UpdatedBy.Value.ToString()
                                                        : "<span class=\"text-muted\">—</span>")
                        </dd>
                    </dl>
                </div>
                <div class="card-footer text-end">
                    <a asp-action="Index" class="btn btn-outline-secondary me-2">
                        <i class="bi bi-arrow-left"></i> رجوع
                    </a>
                    <a asp-action="Upsert" asp-route-id="@Model.ID" class="btn btn-warning">
                        <i class="bi bi-pencil-square"></i> تعديل
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
