@using ErpSwiftCore.Web.Models.ProductSystemManagmentModels.ProductBundleModels
@model ProductBundleDto
@{
    Layout = "_Layout";
    ViewData["Title"] = "Bundle Details";
}

<section class="section">
    <div class="row align-items-start">
        <div class="col-lg-4 mb-4">
            <div class="card p-3">
                <h5 class="card-title">@Model.ParentProduct?.Name</h5>
                <p class="mb-1"><strong>Component:</strong> @Model.ComponentProduct?.Name</p>
                <p class="mb-1"><strong>Quantity:</strong> @Model.Quantity</p>
                <p class="mb-0"><strong>Unit:</strong> @(Model.UnitOfMeasurement?.Name ?? "—")</p>
            </div>
        </div>
        <div class="col-lg-8">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title mb-4 text-primary">تفاصيل الحزمة</h5>
                    <dl class="row mb-0">
                        <dt class="col-sm-4">المنتج الرئيسي</dt>
                        <dd class="col-sm-8">@Model.ParentProduct?.Name</dd>

                        <dt class="col-sm-4">المنتج المكوّن</dt>
                        <dd class="col-sm-8">@Model.ComponentProduct?.Name</dd>

                        <dt class="col-sm-4">الكمية</dt>
                        <dd class="col-sm-8">@Model.Quantity</dd>

                        <dt class="col-sm-4">الوحدة</dt>
                        <dd class="col-sm-8">@(Model.UnitOfMeasurement?.Name ?? "—")</dd>

                        <dt class="col-sm-4">تاريخ الإنشاء</dt>
                        <dd class="col-sm-8">@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")</dd>

                        <dt class="col-sm-4">تاريخ التحديث</dt>
                        <dd class="col-sm-8">
                            @if (Model.UpdatedAt.HasValue)
                            {
                                @Model.UpdatedAt.Value.ToString("yyyy-MM-dd HH:mm")
                            }
                            else
                            {
                                <span class="text-muted">—</span>
                            }
                        </dd>

                        <dt class="col-sm-4">أنشئ بواسطة</dt>
                        <dd class="col-sm-8">@Model.CreatedBy</dd>

                        <dt class="col-sm-4">تحديث بواسطة</dt>
                        <dd class="col-sm-8">
                            @if (Model.UpdatedBy.HasValue)
                            {
                                @Model.UpdatedBy
                            }
                            else
                            {
                                <span class="text-muted">—</span>
                            }
                        </dd>
                    </dl>
                </div>
                <div class="card-footer text-end">
                    <a asp-action="Index" class="btn btn-outline-secondary me-2">
                        <i class="bi bi-arrow-left"></i> رجوع
                    </a>
                    <a asp-action="Upsert" asp-route-id="@Model.ID" class="btn btn-warning">
                        <i class="bi bi-pencil-square"></i> تعديل
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
