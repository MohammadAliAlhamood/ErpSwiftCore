@using ErpSwiftCore.Web.Models.ProductSystemManagmentModels.ProductModels
@using ErpSwiftCore.Web.ViewModels
@using ErpSwiftCore.Web.Enums
@using Microsoft.AspNetCore.Mvc.Rendering
@model ProductViewModel
@{
    Layout = "_Layout";
    bool isEdit = Model.Product.ID != Guid.Empty;
    ViewData["Title"] = isEdit ? "Edit Product" : "Create New Product";
}
<section class="section">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@ViewData["Title"]</h5>
            <form asp-action="Upsert" method="post" class="needs-validation" novalidate>
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Product.ID" />
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" asp-for="Product.Name">Name</label>
                    <div class="col-sm-10">
                        <input asp-for="Product.Name" class="form-control" placeholder="Product Name" required />
                        <span asp-validation-for="Product.Name" class="text-danger small"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" asp-for="Product.Code">Code</label>
                    <div class="col-sm-10">
                        <input asp-for="Product.Code" class="form-control" placeholder="Code" />
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" asp-for="Product.SKU">SKU</label>
                    <div class="col-sm-10">
                        <input asp-for="Product.SKU" class="form-control" placeholder="SKU" />
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" asp-for="Product.Barcode">Barcode</label>
                    <div class="col-sm-10">
                        <input asp-for="Product.Barcode" class="form-control" placeholder="Barcode" />
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" asp-for="Product.ProductType">Product Type</label>
                    <div class="col-sm-10">
                        <select asp-for="Product.ProductType"
                                asp-items="Html.GetEnumSelectList<ProductType>()"
                                class="form-select"
                                required>
                            <option value="">-- Select Type --</option>
                        </select>
                        <span asp-validation-for="Product.ProductType" class="text-danger small"></span>
                    </div>
                </div>


                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" asp-for="Product.UnitOfMeasurementId">Unit</label>
                    <div class="col-sm-10">
                        <select asp-for="Product.UnitOfMeasurementId" asp-items="Model.UnitOfMeasurementList" class="form-select" required>
                            <option value="">-- Select Unit --</option>
                        </select>
                        <span asp-validation-for="Product.UnitOfMeasurementId" class="text-danger small"></span>
                    </div>
                </div>

             

                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" asp-for="Product.CategoryId">Category</label>
                    <div class="col-sm-10">
                        <select asp-for="Product.CategoryId" asp-items="Model.CategoryList" class="form-select">
                            <option value="">-- None --</option>
                        </select>
                        <span asp-validation-for="Product.CategoryId" class="text-danger small"></span>
                    </div>
                </div>
                



                <div class="row mb-5">
                    <div class="col-lg-2">
                        <label class="form-label" asp-for="Product.Description">Description</label>
                    </div>
                    <div class="col-lg-10">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Product Description</h5>
                                <textarea asp-for="Product.Description" class="tinymce-editor form-control" rows="6">
                                  @Html.Raw(Model.Product.Description)
                                </textarea>
                            </div>
                        </div>
                        <span asp-validation-for="Product.Description" class="text-danger small"></span>
                    </div>
                </div>




                <div class="text-end">
                    <a asp-action="Index" class="btn btn-outline-secondary me-2">Cancel</a>
                    <button type="submit" class="btn @(isEdit ? "btn-warning" : "btn-success")">
                        @(isEdit ? "Save Changes" : "Create Product")
                    </button>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" /> 
     
}
